<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  version="2.5">

  <!-- Servlets -->
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>sml.smartdbe.me.GreetingServiceImpl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/app/greet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>statJobCountServlet</servlet-name>
    <servlet-class>sml.smartdbe.me.StatJobCountServiceImpl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>statJobCountServlet</servlet-name>
    <url-pattern>/app/jobCount</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>statJobTimeServlet</servlet-name>
    <servlet-class>sml.smartdbe.me.StatJobTimeServiceImpl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>statJobTimeServlet</servlet-name>
    <url-pattern>/app/jobTime</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>JerseyServletContainer</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>jersey.config.server.provider.packages</param-name>
      <param-value>cn.wolfcode.jersey</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>JerseyServletContainer</servlet-name>
    <url-pattern>/webapi/*</url-pattern>
  </servlet-mapping>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

</web-app>
